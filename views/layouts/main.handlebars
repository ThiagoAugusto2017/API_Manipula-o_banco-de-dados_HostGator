  <h1>Apagar Um Banco de Dados</h1>
  <form action="/DROP/DATABASE" method="POST" class="form">
    <div class="form-control">
      <label for="name">Apagar Banco Dados:</label>
      <input type="text" name="drop_dataBase" placeholder="Digite  o nome do banco">
    </div>
    <input type="submit" value="Apagar">
  </form>

  <h1>Criar uma tabela</h1>
  <form action="/CREATE/TABLE" method="POST" class="form">
    <div class="form-control">
      <label for="name">Criar uma tabela</label>
      <input type="text" name="table" placeholder="Digite  o nome da tabela">
    </div>
    <input type="submit" value="criar">
  </form>
  <h1>Apagar Tabela</h1>
  <form action="/DROP/TABLE" method="POST" class="form">
    <div class="form-control">
      <label for="name">Apagar Tabela</label>
      <input type="text" name="database" placeholder="Digite  o nome da tabela">
    </div>
    <input type="submit" value="Apagar">
  </form>
  </form>
  <h1>Inserir Coluna</h1>
  <form action="ADD/COLUN" method="POST" class="form">
    <div class="form-control">
      <label for="name">Nome Tabela:</label>
      <input type="text" name="table" placeholder="Digite  o nome da tabela">
    </div>
    <div class="form-control">
      <label for="name">Nome Coluna:</label>
      <input type="text" name="colun" placeholder="Digite  o nome da coluna">
    </div>
    <div class="form-control">
      <label for="name">Tipo do dado:</label>
      <input type="text" name="tipo_dado" placeholder="Digite o tipo do dado">
    </div>
    <input type="submit" value="criar">
  </form>

  <h1>Apagar Coluna</h1>
  <form action="/DROP/COLUN" method="POST" class="form">
    <div class="form-control">
      <label for="name">Nome Tabela:</label>
