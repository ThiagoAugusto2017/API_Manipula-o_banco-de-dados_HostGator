    <div class="form-control">
      <label for="name">Tipo do dado nova coluna:</label>
      <input type="text" name="tipo_dado" placeholder="Digite tipo de dado">
    </div>
    <input type="submit" value="Modificar">
  </form>

  <h1>Estrutura da tabela</h1>
  <form action="/DESC/TABLE" method="get" class="form">
    <div class="form-control">
      <label for="name">Nome Tabela:</label>
      <input type="text" name="table" placeholder="Digite  o nome da tabela">
    </div>
    <input type="submit" value="Busca">
  </form>

